extends ../master

block append head

block append body

block append content

  //div.testme

  section.panel.panel--sun
    div.panel__bg
    div.panel__content
      div.panel__inner
        div.char.char--girl
        div.char.char--prof
        div.char.char--boy

  section.panel.panel--frame
    div.panel__bg
    div.panel__content
      div.panel__inner
        div.cupgame.cupgame--count3(data-cupgame, data-cupcount=3)
    div.attachment.attachment--bottomleft.attachment--rotate
      div.char.char--prof

  section.panel.panel--sun
    div.panel__bg
    div.panel__content
      div.panel__inner
        div.slides(data-ng-controller="SlidesCtrl as slides", data-slides="4", data-slides-autoplay="false")
          div.slides__list(data-ng-style="slides.css")
            div.slides__slide
              img(src="http://placehold.it/600x400", data-ng-click="main.toggleOverlay('juicy', true)")
            div.slides__slide
              img(src="http://placehold.it/600x400", data-ng-click="main.toggleOverlay('egg', true)")
            div.slides__slide
              img(src="http://placehold.it/600x400", data-ng-click="main.toggleOverlay('sugar', true)")
            div.slides__slide
              img(src="http://placehold.it/600x400", data-ng-click="main.toggleOverlay('fruit', true)")
          div.slides__arrow(data-ng-click="slides.switchSlide(-1)") <-
          div.slides__arrow.slides__arrow--right(data-ng-click="slides.switchSlide(1)") ->

    div.panel__scrollarea(data-ng-init="main.registerOverlay('juicy')", data-ng-class="{'panel__scrollarea--show':main.overlays['juicy'].states.show}")
      div.panel__overlay juicy

    div.panel__scrollarea(data-ng-init="main.registerOverlay('egg')", data-ng-class="{'panel__scrollarea--show':main.overlays['egg'].states.show}")
      div.panel__overlay egg

    div.panel__scrollarea(data-ng-init="main.registerOverlay('sugar')", data-ng-class="{'panel__scrollarea--show':main.overlays['sugar'].states.show}")
      div.panel__overlay sugar

    div.panel__scrollarea(data-ng-init="main.registerOverlay('fruit')", data-ng-class="{'panel__scrollarea--show':main.overlays['fruit'].states.show}")
      div.panel__overlay fruit
